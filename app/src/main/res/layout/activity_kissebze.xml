<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcbdc"
    tools:context=".kissebze">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_kissebze">
    </include>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="322dp"
        android:layout_height="322dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/brokoli"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="brokoli"
            android:src="@drawable/brokolimenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sarimsak"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="sarimsak"
            android:src="@drawable/sarimsakmenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sogan"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="sogan"
            android:src="@drawable/soganmenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/havuc"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="havuc"
            android:src="@drawable/havucmenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ispanak"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="ispanak"
            android:src="@drawable/ispanakmenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/karnabahar"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="karnabahar"
            android:src="@drawable/karnabaharmenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mantar"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="mantar"
            android:src="@drawable/mantarmenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/turp"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="turp"
            android:src="@drawable/turpmenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pirasa"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="pirasa"
            android:src="@drawable/pirasamenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="2" />
 </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutmenu"
        android:layout_width="198dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:onClick="home"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/homemor" />

        <ImageView
            android:id="@+id/ses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:onClick="ses"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/sesmor" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>