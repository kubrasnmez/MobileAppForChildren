<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa2a5"
    tools:context=".yazmeyve">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_yazmeyve">
    </include>
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="323dp"
        android:layout_height="322dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cilek"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="cilek"
            android:src="@drawable/cicekmenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bogurtlen"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="bogurtlen"
            android:src="@drawable/bogurtlenmenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kayisi"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="kayisi"
            android:src="@drawable/kayisimenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/erik"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="erik"
            android:src="@drawable/erikmenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/karpuz"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="karpuz"
            android:src="@drawable/karpuzmenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/uzum"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="uzum"
            android:src="@drawable/uzummenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kavun"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="kavun"
            android:src="@drawable/kavunmenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/seftali"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="seftali"
            android:src="@drawable/seftalimenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kiraz"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="kiraz"
            android:src="@drawable/kirazmenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutmenu"
        android:layout_width="198dp"
        android:layout_height="99dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:onClick="home"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/homesari" />

        <ImageView
            android:id="@+id/ses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:layout_column="1"
            app:layout_row="0"
            android:onClick="ses"
            app:srcCompat="@drawable/sessari" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>