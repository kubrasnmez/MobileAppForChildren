<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6eff97"
    tools:context=".yazgiysi">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_yazgiysi">
    </include>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="323dp"
        android:layout_height="323dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tisort"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="tisort"
            android:src="@drawable/tisortmenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/etek"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="etek"
            android:src="@drawable/etekmenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sapka"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="sapkayaz"
            android:src="@drawable/sapkamenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/elbise"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="elbise"
            android:src="@drawable/elbisemenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gomlek"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="gomlek"
            android:src="@drawable/gomlekmenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/terlik"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="terlik"
            android:src="@drawable/terlikmenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mayo"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="mayo"
            android:src="@drawable/mayomenu"
            app:civ_border_width="3dp"
            app:layout_column="0"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gozluk"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="gozluk"
            android:src="@drawable/gozlukmenu"
            app:civ_border_width="3dp"
            app:layout_column="1"
            app:layout_row="2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sort"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:layout_margin="5dp"
            android:onClick="sort"
            android:src="@drawable/sortmenu"
            app:civ_border_width="3dp"
            app:layout_column="2"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutmenu"
        android:layout_width="214dp"
        android:layout_height="110dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_margin="13dp"
            android:onClick="home"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/homesari" />

        <ImageView
            android:id="@+id/ses"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_margin="13dp"
            android:onClick="ses"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/sessari" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>